@model SoFetchGrooming.Models.Pet

@{
    ViewData["Title"] = "Details";
}

<h1> @Html.DisplayFor(model => model.PetName)'s Detail </h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2"> Pet's Name </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.PetName) </dd>
        <dt class = "col-sm-2"> Species </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.PetType.PetTypeName) </dd>
        <dt class = "col-sm-2"> Breed </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.PetBreed) </dd>
        <dt class = "col-sm-2"> Pet's Color </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.PetColor) </dd>
        <dt class = "col-sm-2"> Weight </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.PetWeight) lbs </dd>
        <dt class = "col-sm-2"> Age </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.PetAge) years </dd>
        <dt class = "col-sm-2"> Gender </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.PetGender) </dd>
        <dt class = "col-sm-2"> Vaccinated </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.PetVaccination) </dd>
        <dt class = "col-sm-2"> Allergies </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.PetAllergies) </dd>
        <dt class = "col-sm-2"> Special Needs </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.PetSpecialNeeds) </dd>
        <dt class = "col-sm-2"> Medication </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.PetMedications) </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PetId" class="btn btn-info">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
