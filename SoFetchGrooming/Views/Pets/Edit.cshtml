@model PetViewModel

@{
    ViewData["Title"] = "Edit Pet Info";
}

<h1>Edit @Html.DisplayFor(model => model.PetName)'s Info</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="PetId" />
            
            <div class="form-group">
                <label asp-for="PetName" class="control-label"> Name </label>
                <input asp-for="PetName" class="form-control" />
                <span asp-validation-for="PetName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetTypeId" class="control-label"> Species </label>
                <select asp-for="PetTypeId" class="form-control" asp-items="ViewBag.PetTypeId"></select>
                <span asp-validation-for="PetTypeId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PetBreed" class="control-label"> Breed </label>
                <input asp-for="PetBreed" class="form-control" />
                <span asp-validation-for="PetBreed" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetColor" class="control-label"> Color </label>
                <input asp-for="PetColor" class="form-control" />
                <span asp-validation-for="PetColor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetWeight" class="form-label">Weight (lbs)</label>
                <input asp-for="PetWeight" class="form-control" type="number" step="0.1" placeholder="Enter pet weight" />
                <span asp-validation-for="PetWeight" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetAge" class="form-label">Age (years)</label>
                <input asp-for="PetAge" class="form-control" type="number" step="1" placeholder="Enter pet age" />
                <span asp-validation-for="PetAge" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetGender" class="form-label">Gender</label>
                <select asp-for="PetGender" class="form-control">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Unsure">Unsure</option>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">Vaccinated</label>

                <div class="form-check">
                    <input type="radio" asp-for="PetVaccination" class="form-check-input" value="true" id="vaccinatedYes" required />
                    <label class="form-check-label" for="vaccinatedYes">Yes</label>
                </div>

                <div class="form-check">
                    <input type="radio" asp-for="PetVaccination" class="form-check-input" value="false" id="vaccinatedNo" required />
                    <label class="form-check-label" for="vaccinatedNo">No</label>
                </div>

                <span asp-validation-for="PetVaccination" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetAllergies" class="form-label">Allergies</label>
                <textarea asp-for="PetAllergies" class="form-control" rows="2" placeholder="Describe any allergies"></textarea>
                <span asp-validation-for="PetAllergies" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetSpecialNeeds" class="form-label">Special Needs</label>
                <textarea asp-for="PetSpecialNeeds" class="form-control" rows="2" placeholder="Describe any special needs"></textarea>
                <span asp-validation-for="PetSpecialNeeds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetMedications" class="form-label">Medications</label>
                <textarea asp-for="PetMedications" class="form-control" rows="2" placeholder="List any medications"></textarea>
                <span asp-validation-for="PetMedications" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

