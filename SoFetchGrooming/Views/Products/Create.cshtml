@model SoFetchGrooming.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductQuantity" class="control-label"></label>
                <input asp-for="ProductQuantity" class="form-control" />
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Product Images</label>
                <div id="image-url-container">
                    <input type="text" name="ProductImages[0].ImageUrl" class="form-control mb-2" />
                    <span asp-validation-for="ProductImages" class="text-danger"></span>
                </div>
                <button type="button" id="add-image-url" class="btn btn-secondary">Add Image URL</button>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        // Script that adds new input fields for image URLs
        document.getElementById('add-image-url').addEventListener('click', function () {
            // Get the container where the new input will be added
            var container = document.getElementById('image-url-container');
            
            // Get the current number of input fields
            var index = container.getElementsByTagName('input').length;
            
            // Create a new input element
            var inputImageUrl = document.createElement('input');
            inputImageUrl.type = 'text'; // Set the type to text
            inputImageUrl.name = 'ProductImages[' + index + '].ImageUrl'; // Set the name attribute to include the current index
            inputImageUrl.className = 'form-control mb-2'; // Set the class for styling
            
            // Append the new input field to the container
            container.appendChild(inputImageUrl);
        });

    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
